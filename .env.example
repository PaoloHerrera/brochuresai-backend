# --- Core API ---
OPENAI_API_KEY=
MAX_BROCHURES_PER_USER=3

# --- App environment ---
DEV_MODE=true
FILE_LOGGING=false
TRUST_PROXY=false
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173

# --- Rate limiting ---
RATE_LIMIT_MAX_PER_MINUTE=10
RATE_LIMIT_WINDOW_SECONDS=60

# --- Scraper headers ---
SCRAPER_ACCEPT_LANGUAGE=en-US,en;q=0.9

# --- Feature flags ---
SCRAPER_LOG_VERBOSE=false

# --- Playwright (PDF) ---
PLAYWRIGHT_MAX_CONCURRENCY=2
PLAYWRIGHT_PDF_TIMEOUT_MS=30000
PLAYWRIGHT_DISABLE_JS=true

# --- Cache compression ---
CACHE_COMPRESS=false
CACHE_COMPRESSION_ALGO=gzip
CACHE_COMPRESS_MIN_BYTES=10240

# --- External services ---
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./data/brochuresai.db

# --- Mock flags ---
MOCK_LLM=false

